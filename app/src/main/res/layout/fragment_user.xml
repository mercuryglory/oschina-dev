<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_user"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/ques_bt_text_color_light" >

            <RelativeLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_setting"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/ic_my_setting" />

                <ImageView
                    android:id="@+id/iv_user_qr_code"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/btn_qrcode" />
            </RelativeLayout >

            <RelativeLayout
                android:id="@+id/rl_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:gravity="center_horizontal"
                android:padding="10dp" >

                <ImageView
                    android:id="@+id/iv_user_pic"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/widget_dface" />

                <ImageView
                    android:id="@+id/iv_user_gender"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_alignRight="@+id/iv_user_pic"
                    android:src="@mipmap/userinfo_icon_male" />
            </RelativeLayout >

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_user_avatar"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="点击头像登录"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_user_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_list_item"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_user_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="#fff" />
            </LinearLayout >

            <LinearLayout
                android:id="@+id/ll_user_collect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_list_item"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_user_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="#fff" />
            </LinearLayout >

            <LinearLayout
                android:id="@+id/ll_user_care"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_list_item"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_user_stare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textColor="#fff" />
            </LinearLayout >

            <LinearLayout
                android:id="@+id/ll_user_fans"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_list_item"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_user_follower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="粉丝"
                    android:textColor="#fff" />
            </LinearLayout >
        </LinearLayout >

        <LinearLayout
            android:id="@+id/ll_user_msg"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/selector_material"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_my_blog" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="消息"
                android:textColor="#7A7A7A"
                android:textSize="16sp" />
        </LinearLayout >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:id="@+id/ll_user_blog"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/selector_material"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_my_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="博客"
                android:textColor="#7A7A7A"
                android:textSize="16sp" />
        </LinearLayout >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:id="@+id/ll_user_note"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/selector_material"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_my_note" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="便签"
                android:textColor="#7A7A7A"
                android:textSize="16sp" />
        </LinearLayout >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />

        <LinearLayout
            android:id="@+id/ll_user_team"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/selector_material"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_my_team" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="团队"
                android:textColor="#7A7A7A"
                android:textSize="16sp" />
        </LinearLayout >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E1E1E1" />
    </LinearLayout >
</ScrollView >