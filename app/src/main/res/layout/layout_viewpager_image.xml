<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="org.mercury.oschina.tweet.activity.PhotoActivity" >

    <uk.co.senab.photoview.PhotoView
        android:id="@+id/iv_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" />

    <net.oschina.common.widget.Loading
        android:id="@+id/loading"
        android:layout_width="@dimen/space_30"
        android:layout_height="@dimen/space_30"
        android:layout_centerInParent="true"
        app:gBackgroundColor="@color/white_alpha_16"
        app:gForegroundColor="@color/white_alpha_240"
        app:gForegroundLineSize="1dp"/>

</RelativeLayout >
